# ===== API CONFIGURATION =====
VITE_API_BASE_URL=http://localhost:5000/api/v1
VITE_WS_URL=ws://localhost:5000

# ===== APPLICATION SETTINGS =====
VITE_APP_NAME=ORUS Builder
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# ===== FEATURE FLAGS =====
VITE_ENABLE_TRINITY_AI=true
VITE_ENABLE_BLUEPRINT_UPLOAD=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_MARKETPLACE=true
VITE_ENABLE_ANALYTICS=true

# ===== AUTHENTICATION =====
VITE_AUTH_TOKEN_KEY=orus_auth_token
VITE_AUTH_REFRESH_KEY=orus_refresh_token
VITE_SESSION_TIMEOUT=3600000

# ===== MONACO EDITOR =====
VITE_MONACO_CDN=https://cdn.jsdelivr.net/npm/monaco-editor@0.50.0/min/vs

# ===== PERFORMANCE =====
VITE_API_TIMEOUT=30000
VITE_WS_RECONNECT_DELAY=3000
VITE_MAX_FILE_SIZE=10485760

# ===== ANALYTICS (Optional) =====
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# ===== DEVELOPMENT =====
VITE_DEBUG_MODE=true
VITE_SHOW_PERFORMANCE_METRICS=true
VITE_LOG_LEVEL=debug

# ============================================================================
# SECURITY NOTES:
# - Never expose sensitive keys in frontend .env
# - Use backend for API keys and secrets
# - All VITE_ prefixed variables are publicly accessible
