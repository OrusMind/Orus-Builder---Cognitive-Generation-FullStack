 
# ═══════════════════════════════════════════════════════════════
# ORUS BUILDER - ENVIRONMENT VARIABLES
# ═══════════════════════════════════════════════════════════════

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/orus-builder
MONGODB_USER=
MONGODB_PASSWORD=

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Claude AI (Primary Code Generation)
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Trinity Integration (Future)
TRINITY_ENABLED=false
TRINITY_ENDPOINT=
TRINITY_API_KEY=

# CIG-2.0 Protocol
CIG_VALIDATION_ENABLED=true
CIG_STRICT_MODE=true
CIG_MAX_COMPILATION_TIME=30000
CIG_MIN_TYPE_COVERAGE=95
CIG_MAX_COMPLEXITY=15

# Logging
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Performance
MAX_CONCURRENCY=10
REQUEST_TIMEOUT=30000

# Multilingual
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,pt_BR,es
